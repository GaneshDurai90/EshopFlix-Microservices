@model eShopFlix.Web.Models.CartTotalsModel
@if (Model != null)
{
    <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
            Subtotal
            <span>?@Model.Subtotal.ToString("##.#")</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
            Shipping
            <span>+?@Model.ShippingTotal.ToString("##.#")</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
            Discounts
            <span>-?@Model.DiscountTotal.ToString("##.#")</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
            Tax
            <span>+?@Model.TaxTotal.ToString("##.#")</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center  px-0 mb-3">
            <strong>Total Amount</strong>
            <span><strong>?@Model.GrandTotal.ToString("##.#")</strong></span>
        </li>
    </ul>
}
else
{
    <span class="text-muted">No totals available.</span>
}
